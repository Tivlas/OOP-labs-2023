<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="FinanceManagementMAUI.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:FinanceManagementMAUI.Pages">

    <TabBar>
        <ShellContent Title="Home"
                      ContentTemplate="{DataTemplate pages:MainPage}"
                      Route="MainPage" />

        <ShellContent Title="Categories"
                      ContentTemplate="{DataTemplate pages:DisplayCategoriesPage}"
                      Route="DisplayCategoriesPage" />

        <ShellContent Title="Cards"
                      ContentTemplate="{DataTemplate pages:DisplaySimpleAccountsPage}"
                      Route="DisplaySimpleAccountsPage" />

        <ShellContent Title="Transactions"
                      ContentTemplate="{DataTemplate pages:DisplaySimpleTransactionsPage}"
                      Route="DisplaySimpleTransactionsPage" />
    </TabBar>


</Shell>
